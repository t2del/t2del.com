<style>
	.hero-section__section {
		position: relative;
    	height: 100vh;
	}
	section.hero-section__section:after {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background-color: rgba(0, 0, 0, 0.55);
		content: "";
		z-index: 1;
	}
	.hero-section__text {
		justify-self: center;
		max-width: 500px;
		text-align: center;
		position: absolute;
		left: 50%;
		top: 50%;
		transform: translate(-50%, -50%);
		z-index: 2;
	}
	.hero-section__text h1, .hero-section__text p {
		color: #fff;
	}
	.hero-btns__container {
		display: flex;
		align-items: center;
		gap: 1rem;
	}
	.hero-btns__container {
		margin-right: 1rem;
	}
	.hero-section__image {
		width: 100%;
    	height: 100%;
	}
	.hero-section__image picture {
		width: 100%;
    	height: 100%;
	}
	.hero-section__image img {
		width: 100%;
		height: 100%;
		max-height: 100vh;
		object-fit: cover;
	}
	@media (max-width: 768px) {
		.hero-section__section {
			grid-template-columns: 1fr;
		}
	}
</style>
